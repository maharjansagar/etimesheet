.project-detail(layout='row')
  span(flex='')
  div(layout='column')
    h1 Here are the details of the project
    form.md-whiteframe-z1(name='form', ng-submit='save()', layout-padding='')
      md-input-container
        label Name
        input(ng-model='project.name', placeholder='Name')
      md-input-container
        label Description
        input(ng-model='project.description', placeholder='Description')
      div(layout='row', layout-align='space-around center')
        div Start Date
        md-datepicker(ng-model='project.sdate', md-placeholder='From')
        md-datepicker(ng-model='project.edate', md-placeholder='To')
      ul
        | Members
        li(ng-repeat='user in users')
          input(type='checkbox', checklist-model='members', checklist-value='user._id', ng-disabled="shouldBeDisabled(user.deleted)", ng-click="toggle(user._id, member)", ng-checked="exists(user._id, member)")
          |  {{fname}} {{email}}
      div(layout='row')
        input.md-button(type='submit', value='Save')
        md-button(ng-click='reset()') Reset
        md-button(ng-href='/projects') Cancel
  span(flex='')